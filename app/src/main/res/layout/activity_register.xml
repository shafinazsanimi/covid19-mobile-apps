<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/regUserPhoto"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#A0B5B2"
        app:srcCompat="@drawable/ic_add_user_photo" />

    <TextView
        android:id="@+id/textUserPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/regUserPhoto"
        android:text="Upload Profile Photo"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/textUserPhoto"
        android:layout_marginTop="50dp"
        android:background="#D7E3DF"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:drawableStart="@drawable/ic_name"
        android:drawableLeft="@drawable/ic_name" />

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/regName"
        android:layout_marginTop="10dp"
        android:background="#D7E3DF"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email Address"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email" />

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/regEmail"
        android:layout_marginTop="10dp"
        android:background="#D7E3DF"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password" />

    <EditText
        android:id="@+id/regConfPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/regPassword"
        android:layout_marginTop="10dp"
        android:background="#D7E3DF"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:drawableStart="@drawable/ic_password"
        android:drawableLeft="@drawable/ic_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="460dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/regConfPassword"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style"
        android:text="Sign Up"
        android:textColor="#464143"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/register_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_button"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignTop="@+id/login_button"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignRight="@+id/login_button"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="408dp"
        android:theme="@style/ProgressBarTheme"/>

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        app:srcCompat="@drawable/logo_transparent" />

</RelativeLayout>